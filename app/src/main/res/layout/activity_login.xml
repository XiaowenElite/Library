<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="57dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/logo" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="16.5dp"
                android:background="@drawable/yonghu"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/login_et_name"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:hint="请输入用户名"
                android:paddingLeft="30dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="313.5dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/fengexian"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.5dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16.5dp"
                android:background="@drawable/mima"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/login_et_pwd"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_et_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />

            <Button
                android:layout_width="17dp"
                android:layout_height="10.5dp"
                android:background="@drawable/kejian"/>
        </LinearLayout>
    <ImageView
        android:layout_width="313.5dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="13.5dp"
        android:background="@drawable/fengexian"/>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="313.5dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn"
            android:text="登录"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/btn_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#00000000"
            android:text="忘记密码"
            android:textSize="13sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:background="#00000000"
            android:text="立即注册"
            android:textSize="13sp"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>



