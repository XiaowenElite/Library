<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/pic"
        android:layout_width="@dimen/x114"
        android:layout_height="@dimen/y144"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y150"
        android:background="@drawable/logo" />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/x627"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y83"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/y33"
                android:layout_marginLeft="@dimen/x22"
                android:background="@drawable/yonghu" />

            <EditText
                android:id="@+id/login_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:hint="请输入用户名"
                android:paddingLeft="@dimen/x32"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y27"
            android:background="@drawable/fengexian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y45"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x27"
                android:layout_height="@dimen/y32"
                android:layout_marginLeft="@dimen/x22"
                android:background="@drawable/mima" />

            <EditText

                android:id="@+id/login_et_pwd"
                android:layout_width="@dimen/x500"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_et_name"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/x32"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <Button

                android:id="@+id/eye"
                android:layout_width="@dimen/x34"
                android:layout_height="@dimen/y21"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x22"
                android:background="@drawable/kejian" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x3"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y27"
            android:background="@drawable/fengexian" />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#00000000"
                android:text="忘记密码"
                android:textColor="@color/gray_psw"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:text="立即注册"
                android:textColor="@color/gray_psw"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>



