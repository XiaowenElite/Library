<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/black" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_signBack"
            android:layout_width="10dp"
            android:layout_height="17.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="16.5dp"
                android:background="@drawable/yonghu"
                android:layout_marginLeft="35dp"/>
            <EditText
                android:id="@+id/sign_et_name"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:background="#00000000"
                android:hint="请输入用户名"
                android:paddingLeft="30dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="313.5dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/fengexian"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18.5dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16.5dp"
                android:background="@drawable/mima"
                android:layout_marginLeft="35dp"/>
            <EditText
                android:id="@+id/sign_et_pwd"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="313.5dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/fengexian"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18.5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:background="@drawable/youxiang"
                android:layout_marginLeft="34dp"/>
            <EditText
                android:id="@+id/sign_et_email"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:hint="请输入邮箱"
                android:paddingLeft="28dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="313.5dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/fengexian"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18.5dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="15dp"
                android:background="@drawable/dianhua"
                android:layout_marginLeft="34dp"/>
            <EditText
                android:id="@+id/sign_et_tel"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:hint="请输入电话"
                android:paddingLeft="28dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="313.5dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/fengexian"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18.5dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ip_icon"
                android:layout_marginLeft="34dp"/>
            <EditText
                android:id="@+id/sign_et_gateway"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00000000"
                android:hint="请输入网关地址"
                android:paddingLeft="28dp"
                android:textColor="@color/gray"
                android:textSize="11.5sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="313.5dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.5dp"
            android:background="@drawable/fengexian"/>


        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="313.5dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="24.5dp"
            android:text="注册"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/login_btn"
            android:gravity="center"
           />


    </LinearLayout>

</LinearLayout>