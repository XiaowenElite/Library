<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">


        <LinearLayout
            android:id="@+id/btn_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <Button
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/yonghu_icon_03" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="图书馆"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12.5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_room"
                android:layout_width="@dimen/x316"
                android:layout_height="@dimen/y380"
                android:background="@drawable/fangjian_unpress" />

            <Button
                android:id="@+id/btn_scene"
                android:layout_width="@dimen/x316"
                android:layout_height="@dimen/y380"
                android:layout_marginLeft="@dimen/x25"
                android:background="@drawable/qingjing_unpress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12.5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_set"
                android:layout_width="@dimen/x316"
                android:layout_height="@dimen/y380"
                android:background="@drawable/shezhi_unpress" />

            <Button
                android:id="@+id/btn_help"
                android:layout_width="@dimen/x316"
                android:layout_height="@dimen/y380"
                android:layout_marginLeft="@dimen/x25"
                android:background="@drawable/bangzhu_unpress" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
