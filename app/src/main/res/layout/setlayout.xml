<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/black" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_centerInParent="true"
            android:text="信息设定"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_setBack"
            android:layout_width="10dp"
            android:layout_height="17.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="57dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/logo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网关地址："
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_setAddr"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:layout_centerHorizontal="true"
            android:gravity="end"
            android:background="#00000000"
            android:hint="192.168.105"
            android:paddingLeft="30dp"
            android:textColor="@color/gray"
            android:textSize="11.5sp" />
    </LinearLayout>
    <ImageView
        android:layout_width="313.5dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="13.5dp"
        android:background="@drawable/fengexian"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网关端口："
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_setPort"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_et_name"
            android:layout_centerHorizontal="true"
            android:gravity="end"
            android:layout_marginTop="2.5dp"
            android:background="#00000000"
            android:hint="80"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColor="@color/gray"
            android:textSize="11.5sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="313.5dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="13.5dp"
        android:background="@drawable/fengexian"/>


    <Button
        android:id="@+id/btn_setSave"
        android:layout_width="313.5dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_btn"
        android:text="保存"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center" />


</LinearLayout>



